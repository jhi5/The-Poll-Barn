body
  padding-top 61px

.navbar-header
  a
    &.navbar-brand
      margin-top -15px
      margin-bottom -20px
      h6
        color #ccc

.navbar-right
  margin-top 10px

.navbar
  font-size 1.5rem
  button
    margin-left 3px
    margin-right 3px

footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2

.jumbotron
  background-image url("../jumbotron.jpg")
  background-size cover
  height 50vh
  width 100%
  button
    padding 2rem
    background-color rgba(0,0,0,0)
    color #fff
    font-size 2.5rem
    font-family "Pacifico", Helvetica, Arial, sans-serif
    box-shadow inset 0.5em 0.5em #f00
    box-shadow inset 0.4em 0.4em #fff
    text-shadow 0.2rem 0.2rem 0.2rem #000
    &:hover
      box-shadow inset 0.5em 0.5em #e06262
      box-shadow inset 0.4em 0.4em #e06262
      color #fff
      text-shadow #808080

#jumbotitle
  color #fff
  font-size 1.1
  font-family "Pacifico", Helvetica, Arial, sans-serif
  text-shadow 1rem 1rem 1rem #000

#jumboslug
  color #fff
  font-size 3rem
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  text-shadow 0.2rem 0.2rem 0.2rem #000