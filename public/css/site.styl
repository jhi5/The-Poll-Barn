body
  padding-top 61px

.navbar-header
  a
    &.navbar-brand
      margin-top -15px
      margin-bottom -20px
      h6
        color #ccc

.navbar
  font-size 1.5rem

footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid #d7e0e2

.jumbotron
  background-image url("../jumbotron.jpg")
  background-size cover
  height 50vh
  width 100%
  button
    padding 2rem
    background-color rgba(0,0,0,0)
    color white
    font-size 2.5rem
    font-family "Pacifico", Helvetica, Arial, sans-serif
    box-shadow inset .5em .5em red
    box-shadow inset .4em .4em white
    text-shadow .2rem .2rem .2rem black
    &:hover
      color #e06262
      text-shadow grey

#jumbotitle
  color white
  font-size 1.10
  font-family "Pacifico", Helvetica, Arial, sans-serif
  text-shadow 1rem 1rem 1rem black

#jumboslug
  color white
  font-size 3rem
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  text-shadow .2rem .2rem .2rem black